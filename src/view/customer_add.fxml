<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AddCustomerController">
   <children>
      <TextField fx:id="cName" layoutX="45.0" layoutY="122.0" promptText="Name" />
      <TextField fx:id="cAddress" layoutX="45.0" layoutY="175.0" promptText="Address" />
      <TextField fx:id="cPostalCode" layoutX="45.0" layoutY="229.0" promptText="Postal Code" />
      <TextField fx:id="cPhone" layoutX="45.0" layoutY="285.0" promptText="Phone" />
      <Label layoutX="43.0" layoutY="105.0" text="Name" />
      <Label layoutX="45.0" layoutY="153.0" text="Address" />
      <Label layoutX="45.0" layoutY="206.0" text="Postal Code" />
      <Label layoutX="44.0" layoutY="262.0" text="Phone" />
      <Button fx:id="btn_save" layoutX="318.0" layoutY="339.0" mnemonicParsing="false" onAction="#save_customer" prefHeight="25.0" prefWidth="64.0" text="Save" />
      <Button fx:id="btn_cancel" layoutX="404.0" layoutY="339.0" mnemonicParsing="false" onAction="#cancel" prefHeight="25.0" prefWidth="64.0" text="Cancel" />
      <ComboBox fx:id="cb_country" layoutX="318.0" layoutY="122.0" onAction="#cb_country_selected" prefWidth="150.0" promptText="Select Country" />
      <ComboBox fx:id="cb_division" layoutX="318.0" layoutY="175.0" onAction="#cb_select_division" prefWidth="150.0" promptText="Select Division" />
      <Label layoutX="43.0" layoutY="46.0" text="New Customer">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
   </children>
</AnchorPane>

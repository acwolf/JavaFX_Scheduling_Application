<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ReportController">
   <children>
      <ComboBox fx:id="cb_month" layoutX="35.0" layoutY="76.0" prefWidth="150.0" promptText="month" />
      <ComboBox fx:id="cb_type" layoutX="35.0" layoutY="131.0" prefWidth="150.0" promptText="type" />
      <Label layoutX="36.0" layoutY="14.0" text="Report: Total Customer Appointments">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Button layoutX="35.0" layoutY="188.0" mnemonicParsing="false" onAction="#load_customer_total" text="Enter" />
      <Label layoutX="286.0" layoutY="114.0" text="Total Appointments" />
      <TextField fx:id="txt_total" editable="false" layoutX="286.0" layoutY="131.0" promptText="select month and type" />
      <Button layoutX="485.0" layoutY="350.0" mnemonicParsing="false" onAction="#goto_dashboard" text="Dashboard" />
   </children>
</AnchorPane>

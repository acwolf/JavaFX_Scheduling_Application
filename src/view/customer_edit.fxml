      <TextField fx:id="txt_customer_ID" editable="false" layoutX="35.0" layoutY="116.0" />
      <Label layoutX="35.0" layoutY="90.0" text="Customer ID" />
      <Label layoutX="34.0" layoutY="41.0" text="Edit Customer">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
    </children>
</AnchorPane>
